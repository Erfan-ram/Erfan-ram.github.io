      "Autonomous Systems",
      "Humanoid Robots"
    ],
    "sameAs": [
      "https://github.com/Erfan-ram",
      "https://www.linkedin.com/in/erfan-ramezani-78734a2ba",
      "https://t.me/Ramezani_Erfan"
    ],
    "contactPoint": {
      "@type": "ContactPoint",
      "email": "erfanramezay245@gmail.com",
      "telephone": "+989369124987",
      "contactType": "Professional"
    },
    "address": {
      "@type": "PostalAddress",
