</head>

<body>
  <main>
    <!-- SIDEBAR -->
    <aside class="sidebar" data-sidebar>
      <div class="sidebar-info">
        <figure class="avatar-box">
          <img src="/assets/images/erfan-avatar.jpg" alt="Erfan Ramezani" width="80">
        </figure>

        <div class="info-content">
          <h1 class="name" title="Erfan Ramezani">Erfan Ramezani</h1>
          <p class="title">AI Engineer & Robotics Developer</p>
        </div>

        <button class="info_more-btn" data-sidebar-btn>
          <span>Show Contacts</span>
          <ion-icon name="chevron-down"></ion-icon>
        </button>
      </div>

      <div class="sidebar-info_more">
        <!-- Brand Logo -->
        <figure class="logo-box" style="text-align: center; margin: 20px 0;">
          <img src="/assets/images/erfan-logo.png" alt="Erfan Ramezani Logo" style="max-width: 90px; height: auto; display: inline-block;">
        </figure>

        <div class="separator"></div>

        <ul class="contacts-list">
          <li class="contact-item">
            <div class="icon-box">
              <ion-icon name="mail-outline"></ion-icon>
            </div>
            <div class="contact-info">
              <p class="contact-title">Email</p>
              <a href="mailto:erfanramezay245@gmail.com" class="contact-link">erfanramezay245@gmail.com</a>
            </div>
          </li>

          <li class="contact-item">
            <div class="icon-box">
              <ion-icon name="phone-portrait-outline"></ion-icon>
            </div>
            <div class="contact-info">
              <p class="contact-title">Phone</p>
              <a href="tel:+989369124987" class="contact-link">+98 936 912 4987</a>
              <a href="tel:+19093123398" class="contact-link">+1 909 312 3398</a>
            </div>
          </li>

          <li class="contact-item">
            <div class="icon-box">
              <ion-icon name="calendar-outline"></ion-icon>
            </div>
            <div class="contact-info">
              <p class="contact-title">Birthday</p>
              <time datetime="2003-05-15">May 15, 2003</time>
            </div>
          </li>

          <li class="contact-item">
            <div class="icon-box">
              <ion-icon name="location-outline"></ion-icon>
            </div>
            <div class="contact-info">
              <p class="contact-title">Location</p>
              <address>Qazvin-Tehran, Iran</address>
            </div>
          </li>
        </ul>

        <div class="separator"></div>

        <ul class="social-list">
          <li class="social-item">
            <a href="https://github.com/Erfan-ram" class="social-link">
              <ion-icon name="logo-github"></ion-icon>
            </a>
          </li>

          <li class="social-item">
            <a href="https://www.linkedin.com/in/erfan-ramezani-78734a2ba" class="social-link">
              <ion-icon name="logo-linkedin"></ion-icon>
            </a>
          </li>

          <li class="social-item">
            <a href="https://t.me/Ramezani_Erfan" class="social-link" target="_blank" rel="noopener noreferrer">
              <ion-icon name="paper-plane-outline"></ion-icon>
            </a>
          </li>

          <li class="social-item">
            <a href="mailto:erfanramezay245@gmail.com" class="social-link">
              <ion-icon name="mail-outline"></ion-icon>
            </a>
          </li>
        </ul>
      </div>
    </aside>

    <!-- MAIN CONTENT -->
    <div class="main-content">
      <!-- NAVBAR -->
      <nav class="navbar">
        <ul class="navbar-list">
          <li class="navbar-item">
            <a href="/" class={`navbar-link ${currentPage === 'about' ? 'active' : ''}`}>About</a>
          </li>

          <li class="navbar-item">
            <a href="/resume" class={`navbar-link ${currentPage === 'resume' ? 'active' : ''}`}>Resume</a>
          </li>

          <li class="navbar-item">
            <a href="/projects" class={`navbar-link ${currentPage === 'projects' ? 'active' : ''}`}>Projects</a>
          </li>

          <li class="navbar-item">
            <a href="/academics" class={`navbar-link ${currentPage === 'academics' ? 'active' : ''}`}>Academics</a>
          </li>

          <li class="navbar-item">
            <a href="/contact" class={`navbar-link ${currentPage === 'contact' ? 'active' : ''}`}>Contact</a>
          </li>
        </ul>
      </nav>

      <!-- Page Content -->
      <slot />
    </div>
  </main>

  <!-- custom js link -->
  <script is:inline src="/assets/js/script.js"></script>
  <script is:inline src="/assets/js/lightbox.js"></script>

  <!-- ionicon link -->
  <script is:inline type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script is:inline nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
